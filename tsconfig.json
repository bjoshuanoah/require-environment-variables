{
  "include": ["src"],
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "declaration": true, // generate .d.ts files
    "sourceMap": true, // generate source map
    "outDir": "dist", // output compiled js, d.ts, and source map to dist folder
    "strict": true,
    "esModuleInterop": true
  }
}